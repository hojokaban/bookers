<% if flash[:notice] %>
  <div class="flash"><%= flash[:notice] %></div>
<% end %>
<h2>Books</h2>
<table>
  <tr>
	<th width="200">Title</th>
	<th width="400">Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
	  <td><%= book.title %></td>
	  <td><%= book.body %></td>
	  <td><%= link_to "Show", book_path(book) %></td>
	  <td><%= link_to "Edit", edit_book_path(book) %></td>
	  <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
</table>



<%= form_for(@book) do |f| %>
  <h2>New Book</h2>
  <%= render partial: 'layouts/error_messages', locals: {model: @book} %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <div><%= f.submit 'Create Book' %></div>
<% end %>