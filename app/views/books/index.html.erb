<h1>Books</h1>
<table>
  <tr>
	<th width="200">Title</th>
	<th width="400">Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
	  <td><%= book.title %></td>
	  <td><%= book.body %></td>
	  <td><%= link_to "Show", book_path(book) %>
	      <%= link_to "Edit", edit_book_path(book) %></td>
    </tr>
  <% end %>
</table>
<%= form_for(@book) do |f| %>
  <h2>New Book</h2>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>